<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.blacksmithyouthclub.Verification.VerificationActivity"
    tools:showIn="@layout/activity_verification"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:fontFamily="sans-serif-smallcaps"
        android:gravity="center"
        android:text="@string/str_verification_descr1"
        android:textAppearance="?android:attr/textAppearanceLargePopupMenu"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="64dp"
        app:layout_constraintHorizontal_bias="0.0" />

    <TextView
        android:id="@+id/tvDescr2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:fontFamily="sans-serif-smallcaps"
        android:gravity="center"
        android:text="@string/str_verification_descr2"
        android:textAppearance="?android:attr/textAppearanceLargePopupMenu"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fabNext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:elevation="20dp"
        android:src="@drawable/ic_next"
        android:tint="@color/white"
        app:layout_anchor="@+id/include"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="54dp"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout3" />

    <TextView
        android:id="@+id/e"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:elevation="10dp"
        android:fontFamily="sans-serif-condensed"
        android:gravity="center"
        android:text="@string/str_enter_code_here"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="58dp"
        app:layout_constraintTop_toBottomOf="@+id/tvDescr2"
        app:layout_constraintHorizontal_bias="0.0" />

    <TextView
        android:id="@+id/tvResend"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/str_resendcode"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textStyle="bold"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@+id/fabNext" />

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="0dp"

        android:layout_height="55dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="19dp"
        app:layout_constraintTop_toBottomOf="@+id/e"
        app:layout_constraintHorizontal_bias="0.0">

        <EditText
            android:id="@+id/edt1"
            android:layout_width="50dp"
            android:layout_height="fill_parent"

            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:background="@drawable/rounded_shape_accent"

            android:gravity="center"
            android:singleLine="true"

            android:inputType="numberSigned|number"
            android:maxLength="1"
            android:text=""

            >

            <requestFocus />
        </EditText>

        <EditText
            android:id="@+id/edt2"
            android:layout_width="50dp"
            android:layout_height="fill_parent"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:background="@drawable/rounded_shape_accent"
            android:ems="10"
            android:gravity="center"
            android:inputType="numberSigned|number"
            android:maxLength="1"

            android:singleLine="true"
            app:layout_constraintBaseline_toBaselineOf="@+id/edt3"
            tools:layout_editor_absoluteX="134dp"
            tools:layout_editor_absoluteY="203dp" />

        <EditText
            android:id="@+id/edt3"
            android:layout_width="50dp"
            android:layout_height="fill_parent"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:background="@drawable/rounded_shape_accent"

            android:singleLine="true"
            android:gravity="center"
            android:inputType="numberSigned|number"
            android:maxLength="1"

            />

        <EditText
            android:id="@+id/edt4"
            android:layout_width="50dp"
            android:singleLine="true"
            android:layout_height="fill_parent"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"

            android:background="@drawable/rounded_shape_accent"
            android:ems="10"
            android:gravity="center"
            android:inputType="numberSigned|number"
            android:maxLength="1"

            app:layout_constraintBaseline_toBaselineOf="@+id/edt4"
            tools:layout_editor_absoluteX="198dp"
            tools:layout_editor_absoluteY="203dp" />


    </LinearLayout>


</android.support.constraint.ConstraintLayout>
