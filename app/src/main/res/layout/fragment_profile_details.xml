                app:ms_text_color="@color/colorPrimaryText"-->


                <android.support.design.widget.TextInputLayout
                    android:id="@+id/edtWeightWrapper"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"

                    android:gravity="center|left">

                    <EditText
                        android:id="@+id/edtWeight"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:focusableInTouchMode="false"
                        android:gravity="center|top|left"
                        android:hint="@string/Weight"
                        android:inputType="numberSigned"

                        android:maxLength="3"
                        android:singleLine="true"
                        android:textColor="@color/black" />
                </android.support.design.widget.TextInputLayout>

                <!--<Spinner
                    android:id="@+id/spgender"
                    android:layout_width="match_parent"
                    android:layout_height="37dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/custom_spinner">
                </Spinner>-->
                <!--
                                <com.blacksmithyouthclub.material_spinner.MaterialSpinner
                                    android:id="@+id/spgender"

                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"

                                    app:ms_background_color="#efeeee"
                                    app:ms_dropdown_height="wrap_content"
                                    app:ms_dropdown_max_height="500dp"
                                    app:ms_text_color="@color/colorPrimaryText" />-->

                <RadioGroup
                    android:id="@+id/rdGenderGroup"
                    android:layout_width="fill_parent"
                    android:layout_height="45dp"
                    android:layout_marginBottom="4dp"
                    android:layout_marginTop="4dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/rdMale"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Male"
                        android:textColor="@color/black" />

                    <RadioButton
                        android:id="@+id/rdFemale"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Female"
                        android:textColor="@color/black" />


                </RadioGroup>


                <android.support.design.widget.TextInputLayout
                    android:id="@+id/edtAboutWrapper"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"

                    android:gravity="center|left">

                    <EditText
                        android:id="@+id/edtAbout"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:focusableInTouchMode="false"
                        android:gravity="center|top|left"
                        android:hint="@string/aboutyou"
                        android:inputType="textMultiLine"
                        android:maxLines="5"
                        android:minLines="3"
                        android:singleLine="true"
                        android:textColor="@color/black" />
                </android.support.design.widget.TextInputLayout>


                <android.support.design.widget.TextInputLayout
                    android:id="@+id/edtHobbyWrapper"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"

                    android:gravity="center|left">

                    <EditText
                        android:id="@+id/edtHobby"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:focusableInTouchMode="false"
                        android:gravity="center|top|left"
                        android:hint="@string/Hobby"
                        android:inputType="textMultiLine"
                        android:maxLines="5"
                        android:minLines="3"
                        android:singleLine="false"
                        android:textColor="@color/black" />
                </android.support.design.widget.TextInputLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>


</RelativeLayout>