                    android:id="@+id/spnBloodGroup"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_weight="1"

                    app:ms_background_color="#FAFAFA"
                    app:ms_dropdown_height="wrap_content"
                    app:ms_dropdown_max_height="500dp"
                    app:ms_text_color="@color/colorPrimaryText" />

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/edtDOBWrapper"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"

                    android:gravity="center|left">

                    <EditText
                        android:id="@+id/edtDOB"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:focusableInTouchMode="false"
                        android:gravity="center|top|left"
                        android:hint="@string/dob"
                        android:inputType="textMultiLine"
                        android:maxLines="5"
                        android:singleLine="true"
                        android:textColor="@color/black" />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/edtDOAWrapper"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"

                    android:gravity="center|left">

                    <EditText
                        android:id="@+id/edtDOA"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:focusableInTouchMode="false"
                        android:gravity="center|top|left"
                        android:hint="@string/doa"

                        android:maxLines="5"
                        android:singleLine="true"
                        android:textColor="@color/black" />
                </android.support.design.widget.TextInputLayout>


                <!--<Spinner
                    android:layout_marginBottom="0dp"
                    android:id="@+id/spheight"
                    android:layout_width="match_parent"
                    android:layout_height="37dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/custom_spinner">
                </Spinner>-->


                <com.blacksmithyouthclub.material_spinner.MaterialSpinner
                    android:id="@+id/spnHeight"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"

                    app:ms_background_color="#FAFAFA"
                    app:ms_dropdown_height="wrap_content"
                    app:ms_dropdown_max_height="500dp"
                    app:ms_text_color="@color/colorPrimaryText" />


                <!--<Spinner
                    android:id="@+id/spnHeight"
